- user = user_signed_in?
- if user
  = link_to "New Post", new_blog_post_path
.row
  .col-xs-12.col-sm-2
    %h2.center Recent Posts
    %ul
      - @posts.each do |p|
        %li
          %a.truncate{href: "##{p.title}"} 
            = p.title
  .col-xs-12.col-sm-10
    - @posts.each do |p|
      .panel.panel-default{ id: "#{p.title}" }
        .panel-heading
          .panel-title
            %h3
              = p.title
        .panel-body
          %p 
            = p.content.html_safe
        - if user
          .panel-footer
            %a.btn.btn-default{ href: edit_blog_post_path(p) } Edit
            = link_to 'Delete', blog_post_path(p), method: :delete, data: { confirm: 'Are you sure you want to delete this post?' }, class: 'btn btn-danger'
