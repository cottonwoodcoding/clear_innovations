.navbar.navbar-default{role: 'navigation'}
  .container-fluid
    .navbar-header
      %button.navbar-toggle{"data-target" => "#nav-items", 'data-toggle' => 'collapse', type: 'button'}
        %span.sr-only Toggle Navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a{href: '/'}
        #logo.pull-left.white
          = image_tag 'logo.svg'
      .text-center.logo-help
        %h6.white Licensed & Bonded
    .collapse.navbar-collapse#nav-items.navbar-right
      %ul.nav.navbar-nav
        %li
          = link_to("Home", :root, class: 'nav-item')
        %li
          = link_to("About", about_path, class: 'nav-item')
        %li
          = link_to("Products", products_path, class: 'nav-item')
        %li
          = link_to("Gallery", gallery_path, class: 'nav-item')
        %li
          = link_to :root, class: 'nav-item' do
            = fa_icon 'envelope lg'
        %li
          = link_to 'http://facebook.com', class: 'nav-item', target: '_balnk' do
            = fa_icon 'facebook-square lg'
